# Document Processing Service Environment Configuration

# Application Settings
# Valid values: development, testing, or production
APP_ENV=development
DEBUG=true
# Valid log levels: debug, info, warning, error, critical
LOG_LEVEL=info

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8002
SERVICE_WORKERS=1

# Database Configuration - MongoDB (for document storage)
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=insightdocs
MONGO_USERNAME=admin
MONGO_PASSWORD=password

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_DPI=300
# 1 = Automatic page segmentation with OSD
OCR_PAGE_SEGMENTATION_MODE=1

# Storage Paths
RAW_DOCUMENTS_PATH=/app/data/raw
PROCESSED_DOCUMENTS_PATH=/app/data/processed

# Document Classification
DOCUMENT_CLASSIFIER_MODEL=/app/data/models/document_classifier
LAYOUT_ANALYZER_MODEL=/app/data/models/layout_analyzer

# Authentication & Security
JWT_SECRET_KEY=changeme_use_strong_random_string
JWT_ALGORITHM=HS256
# Set to true in production
ENABLE_AUTH=false

# Task Orchestration Communication
TASK_ORCHESTRATION_SERVICE_URL=http://task_orchestration:8004/api/v1

# Performance Settings
BATCH_SIZE=10
MAX_WORKERS=4
TIMEOUT_SECONDS=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9092
