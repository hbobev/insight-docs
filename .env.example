# InsightDocs Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_ENV=development  # development, testing, or production
DEBUG=true
LOG_LEVEL=info  # debug, info, warning, error, critical

# API Gateway Settings
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_WORKERS=1
API_GATEWAY_CORS_ORIGINS=["http://localhost:3000"]

# Microservices URLs (for inter-service communication)
DOCUMENT_INGESTION_URL=http://document_ingestion:8001/api/v1
DOCUMENT_PROCESSING_URL=http://document_processing:8002/api/v1
ENTITY_EXTRACTION_URL=http://entity_extraction:8003/api/v1
TASK_ORCHESTRATION_URL=http://task_orchestration:8004/api/v1

# Authentication & Security
SECRET_KEY=changeme_use_strong_random_string
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=60
ENABLE_AUTH=false  # Set to true in production

# Database Configuration - MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=insightdocs
MONGO_USERNAME=insightdocs_user
MONGO_PASSWORD=changeme

# Database Configuration - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=insightdocs
POSTGRES_USERNAME=insightdocs_user
POSTGRES_PASSWORD=changeme
POSTGRES_SCHEMA=public

# Message Broker - RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Cache - Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_DPI=300
OCR_PAGE_SEGMENTATION_MODE=1  # 1 = Automatic page segmentation with OSD

# NLP Models 
NLP_MODEL_PATH=/app/data/models/entity_extractor
DOCUMENT_CLASSIFIER_MODEL=/app/data/models/document_classifier
LAYOUT_ANALYZER_MODEL=/app/data/models/layout_analyzer

# Storage Paths 
RAW_DOCUMENTS_PATH=/app/data/raw
PROCESSED_DOCUMENTS_PATH=/app/data/processed

# Performance Settings
BATCH_SIZE=10
MAX_WORKERS=4
TIMEOUT_SECONDS=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
